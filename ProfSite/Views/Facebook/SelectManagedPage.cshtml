@model List<FacebookPage>
@using bvResources = ProfSite.Resources.Resource

<div class="container">
    <div class="container">
        <div class="row">
            <div class="col-sm-2 col-lg-3"></div>
            <div class="col-sm-8 col-lg-6">
                <div class="white-trans-bg diagonal-bottom panel-select-facebook">
                    <h3>Facebook Account Setup</h3>
                    <hr class="diagonal plus">
                    <p>@bvResources.Facebook_SelectManagedPage_FbAccountSetup</p>
                    <ul class="list-unstyled">
                        @foreach (var account in @Model)
                        {
                            <li>
                                <a href="/facebook/savemanagedaccount?pageId=@account.id&pageToken=@account.access_token">@account.name</a>
                            </li>
                        }
                    </ul>
                </div>
            </div>
            <div class="col-sm-2 col-lg-3"></div>
        </div>
    </div>
</div>