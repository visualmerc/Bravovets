@model AdminSavePostModel
@{ Layout = null;}
<!doctype html>
<html lang="en" class="no-bg">

<head>
    <title>
        Preview Post | BravoVets
    </title>
    <meta name="description" content="">
    <meta name="viewport" content="width=device-width, initial-scale=1">
    <link rel="icon" href="images/favicon.png" />


    <link type="text/css" rel="stylesheet" href="https://fast.fonts.net/cssapi/36b782c8-14a6-42ac-b9e8-820a1ab045fd.css" />

    @Styles.Render("~/Content/css")

    @Scripts.Render("~/bundles/modernizr")

</head>

<body class="no-bootstrap-icons no-bg">

    <div class="modal-dialog social-post-dialog preview-dialog">
        <div class="modal-content">
            <div class="modal-body">
                <div class="modal-postPreviewWrapper">
                    <div class="modal-postPreviewWrapper2">
                        @if (!string.IsNullOrEmpty(Model.featuredContentUrl))
                        {
                            <img src="@Model.featuredContentUrl" alt="featured image" class="content-image" />
                        }
                        <h3>@Model.title</h3>
                        <hr class="plus diagonal">
                        <div class="content-text">
                            @Html.Raw(Model.contentText)
                        </div>

                        @if (Model.attachments != null && Model.attachments.Count > 0)
                        {
                            <div class="attachment-wrapper">
                                <h4>@Resource.BravoVets_Attachments</h4>
                                <hr class="diagonal">
                                <ul>
                                    @foreach (var adminPostAttachment in Model.attachments)
                                    {
                                        <li>
                                            <a href="@adminPostAttachment.url" target="_blank">@adminPostAttachment.name</a>
                                        </li>
                                    }
                                </ul>
                            </div>
                        }
                    </div>
                </div>
            </div>
        </div>
    </div>

</body>
@Scripts.Render("~/bundles/jquery")
</html>

