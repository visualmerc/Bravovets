@section scripts {
    <script type="text/javascript">
        $(document).ready(function () {
            $('body').scrollspy({ target: '#side-nav' });

            $('li.question-item').on('click', function () {
                var $this = $(this);
                if ($this.hasClass('active')) {
                    $this.removeClass('active');
                    $this.find('div.content').slideUp('fast');
                    $this.find('img').attr('src', '/Content/img/plus_icon.png');
                } else {
                    $this.addClass('active');
                    $this.find('div.content').slideDown('fast');
                    $this.find('img').attr('src', '/Content/img/minus_icon.png');
                }
            });

            var imagePATH = "/Content/img/", clockImgArr = [],
                clockImgPNGArr = [],
                clockArr = [],
                clockCount = 0;

            //images and li class names
            clockImgArr[0] = 'clock_anim_04';
            clockImgArr[1] = 'clock_anim_05';
            clockImgArr[2] = 'clock_anim_06';
            clockImgArr[3] = 'clock_anim_07';
            clockImgArr[4] = 'clock_anim_08';
            clockImgArr[5] = 'clock_anim_09';
            clockImgArr[6] = 'clock_anim_10';
            clockImgArr[7] = 'clock_anim_11';
            clockImgArr[8] = 'clock_anim_12';
            clockImgArr[9] = 'clock_anim_blur01';
            clockImgArr[10] = 'clock_anim_blur10';
            clockImgArr[11] = 'clock_anim_blur11';

            //make names into images links
            $.each(clockImgArr, function (key, val) {
                clockImgPNGArr[key] = imagePATH + val + '.png';
            })

            //load the first image
            $('#tweleveweeks_container ul').append('<li class="' + clockImgArr[0] + ' clockface" style="display:block"><img src="' + clockImgPNGArr[0] + '" ></li>');

            //create animation order array
            var n = 0;
            for (var i = 0; i < 17; i++) {
                if (i % 2 == 0) {
                    clockArr[i] = clockImgArr[n];
                    n++;
                } else if (i < 11 && i % 2 != 0) {
                    clockArr[i] = clockImgArr[9];
                } else if (i == 11) {
                    clockArr[i] = clockImgArr[11];
                } else if (i > 11 && i % 2 != 0) {
                    clockArr[i] = clockImgArr[10];
                }
            }

            //preloading functions
            function preloadImages(images, callback) {
                var count = images.length;
                if (count === 0) {
                    callback();
                }
                var loaded = 0;
                $(images).each(function () {
                    $('<img>').attr('src', this).load(function () {
                        loaded++;
                        if (loaded === count) {
                            callback();
                        }
                    });
                });
            };
            preloadImages(clockImgPNGArr, function () {
                aferLoaded()
            });

            // do all this crap after its loaded
            function aferLoaded() {
                console.log('They loaded!');

                $.each(clockImgArr, function (key, val) {
                    if (key > 0) {
                        $('#tweleveweeks_container ul').append('<li class="' + val + ' clockface" style="display:none"><img src="' + clockImgPNGArr[key] + '" ></li>');
                    }

                })
                //ANIMATE
                $('#tweleveweeks_container img').ready(function () {
                    setTimeout(function () {
                        var clockAnim = setInterval(function () {
                            $('.clockface').hide();
                            $('.' + clockArr[clockCount]).show();
                            if (clockCount >= clockArr.length - 1) {
                                clearInterval(clockAnim);
                            }
                            clockCount++;
                        }, 50);
                    }, 1000)
                })
            }
        });
    </script>
}
