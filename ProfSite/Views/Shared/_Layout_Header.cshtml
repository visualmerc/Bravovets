@using bvResources = ProfSite.Resources.Resource
<header class="navbar bv-nav" role="banner">
    <div class="container">
        <div class="row nav-wrapper">
            <div class="col-sm-4">
                <div class="navbar-header">
                    <button class="navbar-toggle" type="button" data-toggle="collapse" data-target=".bs-navbar-collapse">
                        <span class="sr-only">@bvResources.Shared_Layout_Bravecto_HeaderToggleNavigation</span>
                        <span class="icon-bar"></span>
                        <span class="icon-bar"></span>
                        <span class="icon-bar"></span>
                    </button>
                    <a href="/dashboard" class="navbar-brand bravovets">
                        <img src="/images/logo-bravovets@2x.png" alt="Bravovets Logo" class="logo-bravovets">
                    </a>
                </div>
            </div>
            <div class="col-sm-8">
                <nav class="collapse navbar-collapse bs-navbar-collapse" role="navigation">
                    <ul class="nav navbar-nav navbar-right navbar-bravecto">
                        @foreach (var item in ((BravectoMenu)ViewBag.Menu).MenuItems)
                        {
                            if (((BravectoMenu)ViewBag.Menu).ActiveItem == item.Code)
                            {
                                <li class="@item.CssClass">
                                    <a class="active" href="@item.Url">@item.Display</a>
                                </li>
                            }
                            else
                            {
                                <li class="@item.CssClass"><a href="@item.Url">@item.Display</a></li>
                            }
                        }
                        <ul class="nav navbar-nav product-info">
                            <li>
                                <a href="/docs/Bravecto_SPC-PIL_en.pdf" target="_blank">
                                    @bvResources.Shared_Layout_Bravecto_HeaderDownloadProductInfo
                                </a>
                            </li>
                            <!-- TODO: Uncomment this when the search functionality is added to the site -->
                            <!--  <li class="search"><a href="#footer-search">Search<span class="icon-search"></span></a></li> -->
                        </ul>
                    </ul>
                </nav>
            </div>
        </div>
    </div>
</header>

<noscript>
    <div id="javaNotification" style="border: 1px solid #ffde9f;padding: 5px; background: #fffecd;">
        <div class="col">
            <h3>@bvResources.JavaScriptDisable_Title</h3>
            <p>@bvResources.JavaScriptDisable_Text1<br /> @bvResources.JavaScriptDisable_Text2</p>
        </div>
    </div>
</noscript>
