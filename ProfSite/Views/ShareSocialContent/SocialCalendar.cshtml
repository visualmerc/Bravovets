@using bvResources = ProfSite.Resources.Resource
<link rel="stylesheet" href="/Content/blocks-custom.css"/>

<div class="container">
    <div class="row">
        <div class="col-md-12">
            <h1 class="page-title calendar-icon">@bvResources.ShareSocialContent_SocialCalendar_SocialCalendar</h1>
        </div>
    </div>
    <div class="row">
        <div class="col-md-12">
            <div class="calendar-header">
                <div id="calendar-controls" class="form-inline">
                    <div class="btn-group date-selector">
                        <button class="btn btn-primary" data-calendar-nav="prev"> << </button>
                        <button class="btn btn-default calendar-title">@bvResources.ShareSocialContent_SocialCalendar_Today</button>
                        <button class="btn btn-primary" data-calendar-nav="next"> >> </button>
                    </div>
                    <div class="btn-group view-selector">
                        <button class="btn btn-warning" data-calendar-view="year">@bvResources.ShareSocialContent_SocialCalendar_Year</button>
                        <button class="btn btn-warning active" data-calendar-view="month">@bvResources.ShareSocialContent_SocialCalendar_Month</button>
                        <button class="btn btn-warning" data-calendar-view="week">@bvResources.ShareSocialContent_SocialCalendar_Week</button>
                    </div>
                    <div class="btn-group today-btn-wrapper">
                        <button class="btn btn-default" data-calendar-nav="today">@bvResources.ShareSocialContent_SocialCalendar_Today</button>
                    </div>
                </div>
            </div>
        </div>
    </div>
    <div class="row">
        <div class="col-sm-12">
            <div class="calendar" id="socialCalendar"></div>
        </div>
    </div>
    <div class="clearfix"></div>
</div>



@section Scripts {

    <script language="javascript">
        var bvLanguage = '@ViewBag.Language';
    </script>

    @Scripts.Render("~/bundles/calendar");
    @Scripts.Render("~/bundles/fileupload");

}